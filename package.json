{
  "name": "@nilswg/use-config",
  "type": "commonjs",
  "main": "./src/index.ts",
  "version": "0.0.6",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.mjs",
      "require": "./index.js"
    }
  },
  "scripts": {
    "dev": "tsup ./src/index.ts --watch --onSuccess \"node dist/index.js -e development\"",
    "start": "node dist/index.js -e production",
    "test": "jest",
    "build": "tsup --env.NODE_ENV production ./src/index.ts",
    "publish": "cd dist && npm publish"
  },
  "devDependencies": {
    "@swc/core": "^1.4.8",
    "@swc/jest": "^0.2.36",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.10.6",
    "jest": "^29.7.0",
    "tsup": "^8.0.1"
  },
  "dependencies": {
    "@luxass/strip-json-comments": "^1.2.0",
    "typescript": ">=4.0.0"
  },
  "description": "Easy to use and manage your configurations",
  "directories": {
    "example": "examples"
  },
  "keywords": [
    "use-config"
  ],
  "author": "nilswg",
  "license": "ISC",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
