{
  "compilerOptions": {
    "noImplicitAny": false,
    "allowJs": false,
    "module": "commonjs",
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "jsx": "react",
    "moduleResolution": "node",
    "removeComments": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "dist",
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "dist/**/*",
  ]
}